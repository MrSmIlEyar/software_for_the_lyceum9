<MainScreen>:
    MDScreen:

        MDBottomNavigation:
            id: botnav
            name: 'kuku'
            panel_color: [0.5, 0.39, 0.31, 1]
            # selected_color_background: get_color_from_hex("#97ecf8")
            text_color_active: 0, 0, 0, 1

            MDBottomNavigationItem:
                id: newsnav
                name: 'screen 1'
                text: 'Новости'
                icon: 'feather'
                badge_icon: "numeric-10"
                on_tab_release: app.now_pad_move("Новости")
            MDBottomNavigationItem:
                id: schnav
                name: 'screen 2'
                icon: 'calendar-blank-outline'
                text: 'Расписание'
                on_tab_release: app.now_pad_move("Расписание")

                MDRoundFlatButton:
                    text : ' '
                    pos : (Window.width * 0.5, 0)
                    id: rb

                    size_hint : {0.5 , 1}
                    font_size : sp(17)
                    on_release: app.arrow_right()
                    text_color: [0, 0, 0, 0.8]
                    line_color: [1, 1, 1, 1]
                    active_color : [1, 1, 1, 1]
                    line_width : 0.1


                MDRoundFlatButton:
                    text : ' '
                    id: lb
                    pos_hint: {"top": 0}  # верхняя граница экрана
                    pos_hint: {"bottom": 1}  # нижняя граница экрана
                    pos_hint: {"right": 0.5}
                    pos_hint: {"left": 0}

                    size_hint : {0.5 , 1}
                    font_size : sp(17)
                    on_release: app.arrow_left()
                    text_color: [0, 0, 0, 0.8]
                    line_color: [1, 1, 1, 1]
                    active_color : [1, 1, 1, 1]
                    line_width : 0.1



            MDBottomNavigationItem:
                id: settoll
                name: 'screen 3'
                icon: 'cog'
                text: 'Настройки'
                # on_tab_touch_down: print("on_tab_touch_down")
                # on_tab_touch_move: print("on_tab_touch_move")
                # on_tab_touch_up: print("on_tab_touch_up")
                # on_tab_press: print("on_tab_press")
                on_tab_release: app.now_pad_move("Настройки")

                MDCard :
                    size_hint: None, None
                    size : sp(320), sp(450)
                    pos_hint : {"center_x":.5,"center_y":.5}
                    elevation : 15
                    md_bg_color : [255/255,255/255,255/255,1]
                    padding : 20
                    spacing : 10
                    orientation : "vertical"
                    # Adding items to the card

                    MDRoundFlatButton:
                        text : 'Выйти из аккаунта и \n\t\t приложения'
                        pos_hint : {"center_x":.5,"center_y":.9}
                        font_size : sp(30)
                        on_release: app.exit_acc()
                        text_color: [0, 0, 0, 0.8]
                        line_color: [0.5, 0.39, 0.31, 0.5]
                        line_width : 1.5
                        font_name: "resources/Vetka.otf"

                    MDRoundFlatButton:
                        text : 'Выйти из приложения'
                        pos_hint : {"center_x":.5}
                        font_size : sp(30)
                        on_press: app.exits()
                        text_color: [0, 0, 0, 0.8]
                        line_color: [0.5, 0.39, 0.31, 0.5]
                        line_width : 1.5
                        font_name: "resources/Vetka.otf"

                    MDRoundFlatButton:
                        text : 'Удалить аккаунт'
                        pos_hint : {"center_x":.5}
                        font_size : sp(30)
                        on_press: app.delite_acc()
                        text_color: [0, 0, 0, 0.8]
                        line_color: [0.5, 0.39, 0.31, 0.5]
                        line_width : 1.5
                        font_name: "resources/Vetka.otf"

                    BoxLayout:
                        size_hint_y: 1
                        spacing: sp(25)
                        pos_hint: {'center': .6}

                        MDLabel:
                            width: sp(3)
                            font_size: sp(3)
                            text: ''

                        MDTextFieldRound :
                            id: getfont
                            hint_text : "шрифт"
                            icon_right : "format-size"
                            size_hint_x : None
                            width : sp(75)
                            font_size : sp(25)
                            pos_hint : {"center_x":.9}
                            normal_color : [0.5, 0.39, 0.31, 0.5]
                            font_name: "resources/Vetka.otf"

                        MDRoundFlatButton:
                            text : 'ОК'
                            pos_hint : {"center_x":.5}
                            font_size : sp(18)
                            on_press: app.getfontbut()
                            text_color: [0, 0, 0, 0.8]
                            line_color: [0.5, 0.39, 0.31, 0.5]
                            line_width : 1.5
                            font_name: "resources/Vetka.otf"

                        MDLabel:
                            width: sp(3)
                            font_size: sp(3)
                            text: ''
                    Widget :
                        size_hint_y : 1
                        height : sp(30)




