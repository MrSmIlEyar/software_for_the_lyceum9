<LoginScreen>:
    pos_hint : {"center_x":.5,"center_y":.5}
    MDScreen :
        md_bg_color : [0.5, 0.39, 0.31, 0.5]
        name: 'screen1'

        MDCard :
            size_hint: None, None
            size : sp(320), sp(450)
            pos_hint : {"center_x":.5,"center_y":.5}
            elevation : 15
            md_bg_color : [255/255,255/255,255/255,1]
            padding : 20
            spacing : 30
            orientation : "vertical"
            # Adding items to the card
            MDLabel :
                text : 'ВХОД'
                color: [0.5, 0.39, 0.31, 1]
                font_style : 'Button'
                font_size : sp(45)
                halign : "center"
                size_hint_y : None
                height : self.texture_size[1]
                padding_y : 5
                font_name: "resources/Vetka.otf"
            MDTextFieldRound :
                id: getusername
                hint_text : "логин"
                icon_right : "account"
                size_hint_x : None
                width : sp(220)
                font_size : sp(25)
                pos_hint : {"center_x":.5}
                normal_color : [0.5, 0.39, 0.31, 0.5]
                font_name: "resources/Vetka.otf"
            MDTextFieldRound :
                id: getparol
                hint_text : "пароль"
                icon_right : "key-variant"
                size_hint_x : None
                width : sp(220)
                font_size : sp(25)
                pos_hint : {"center_x":.5}
                normal_color : [0.5, 0.39, 0.31, 0.5]
                password : True
                font_name: "resources/Vetka.otf"
            MDRoundFlatButton:
                text : 'Войти'
                pos_hint : {"center_x":.5}
                font_size : sp(17)
                on_release: app.login()
                text_color: [0, 0, 0, 0.8]
                line_color: [0.5, 0.39, 0.31, 0.5]
                line_width : 1.5
                font_name: "resources/Vetka.otf"
            MDLabel:
                id: status
                halign: "center"
                font_color: [255/255, 16/255, 0/255]
                font_style : 'Button'
                font_size : sp(15)
            MDRoundFlatButton:
                text : 'Зарегистрироваться'
                pos_hint : {"center_x":.5}
                font_size : sp(17)
                on_press: root.manager.current = 'registration'
                text_color: [0, 0, 0, 0.8]
                line_color: [0.5, 0.39, 0.31, 0.5]
                line_width : 1.5
                font_name: "resources/Vetka.otf"
            Widget :
                size_hint_y : None
                height : sp(30)



